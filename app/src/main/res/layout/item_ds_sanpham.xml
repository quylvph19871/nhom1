<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:id="@+id/rlt_dsSP"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="@drawable/bg_rounded_border"
    android:layout_marginBottom="10dp">
    <ImageView
        android:layout_marginStart="10dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/polo"
        android:layout_marginTop="10dp"
        android:id="@+id/img_item_imgSp"
        android:scaleType="centerCrop"
        android:layout_alignParentLeft="true"
        />

        <TextView
            android:id="@+id/tv_item_tenSP"
            android:layout_toRightOf="@id/img_item_imgSp"
            android:layout_marginHorizontal="10dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên Sản phẩm"
            android:layout_toLeftOf="@id/img_suaSP"
            android:textSize="20dp"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/tv_item_ThanhphanSP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/img_suaSP"
            android:layout_toRightOf="@id/img_item_imgSp"
            android:layout_marginHorizontal="10dp"
            android:text="Mô tả: "
            android:textSize="14dp"

            />
        <TextView
            android:id="@+id/tv_item_tiendm"
            android:layout_width="match_parent"
            android:layout_toLeftOf="@id/img_suaSP"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/img_item_imgSp"
            android:layout_marginHorizontal="10dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="12dp"
            android:text="150000đ"
            android:textSize="20dp"
            android:textColor="#F44336"

            />

          <ImageView
              android:layout_marginTop="12dp"
              android:layout_marginEnd="12dp"
              android:layout_alignParentRight="true"
              android:layout_alignParentTop="true"
              android:id="@+id/img_suaSP"
              android:layout_width="35dp"
              android:layout_height="35dp"
              android:src="@drawable/edit"
              android:layout_marginBottom="10dp"/>
          <ImageView
              android:layout_marginBottom="12dp"
              android:layout_marginEnd="12dp"
              android:layout_alignParentRight="true"
              android:layout_alignParentBottom="true"
              android:id="@+id/img_xoaSP"
              android:layout_width="35dp"
              android:layout_height="35dp"
              android:src="@drawable/delete"/>
</RelativeLayout>